<%= form_for(@user) do |f| %>
    <div class="user-form">
        <div>
            <%= f.label :username %><br>
            <%= f.text_field :username %>
        </div>
        
        <div>
            <%= f.label :password %><br>
            <%= f.password_field :password %>
        </div>

        <div>
            <%= f.label :password_confirmation %><br>
            <%= f.password_field :password_confirmation %>
        </div>
        
        <div class="submit">
            <%= f.submit "Sign Up" %>
        </div>
    </div>
<% end %>